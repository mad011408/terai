# AI Terminal Agent - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Configuration
# =============================================================================

# Primary API Configuration
AI_AGENT_API_KEY=
AI_AGENT_API_HOST=https://go.trybons.ai
AI_AGENT_API_PATH=https://go.trybons.ai/v1/chat/completions

# OpenAI API (if using OpenAI models directly)
OPENAI_API_KEY=your_openai_key_here

# Anthropic API (if using Anthropic models directly)
ANTHROPIC_API_KEY=your_anthropic_key_here

# =============================================================================
# Model Configuration
# =============================================================================

# Default model to use
AI_AGENT_DEFAULT_MODEL=claude-opus-4-5-20251101

# Model temperature (0.0 - 1.0)
AI_AGENT_TEMPERATURE=0.7

# Maximum tokens for responses
AI_AGENT_MAX_TOKENS=40960

# =============================================================================
# Agent Configuration
# =============================================================================

# Maximum iterations per agent
AI_AGENT_MAX_ITERATIONS=10

# Agent timeout in seconds
AI_AGENT_TIMEOUT=300

# Enable parallel execution
AI_AGENT_ENABLE_PARALLEL=true

# =============================================================================
# Safety Configuration
# =============================================================================

# Enable input guardrails
AI_AGENT_ENABLE_INPUT_GUARDRAILS=true

# Enable output guardrails
AI_AGENT_ENABLE_OUTPUT_GUARDRAILS=true

# Enable PII filtering
AI_AGENT_ENABLE_PII_FILTER=true

# Sandbox mode for tool execution
AI_AGENT_SANDBOX_MODE=true

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
AI_AGENT_LOG_LEVEL=INFO

# Log file path (optional)
AI_AGENT_LOG_FILE=logs/agent.log

# JSON format logs
AI_AGENT_LOG_JSON=false

# =============================================================================
# Telemetry Configuration
# =============================================================================

# Enable telemetry
AI_AGENT_ENABLE_TELEMETRY=true

# Telemetry sample rate (0.0 - 1.0)
AI_AGENT_TELEMETRY_SAMPLE_RATE=1.0

# =============================================================================
# Database Configuration (Optional)
# =============================================================================

# PostgreSQL
POSTGRES_USER=agent
POSTGRES_PASSWORD=agent_password
POSTGRES_DB=ai_agent
DATABASE_URL=postgresql://agent:agent_password@localhost:5432/ai_agent

# Redis
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Vector Store Configuration
# =============================================================================

# ChromaDB
CHROMADB_HOST=localhost
CHROMADB_PORT=8000

# =============================================================================
# Local Model Configuration (Ollama)
# =============================================================================

# Ollama server URL
OLLAMA_HOST=http://localhost:11434

# =============================================================================
# UI Configuration
# =============================================================================

# Enable colored output
AI_AGENT_ENABLE_COLORS=true

# Terminal width
AI_AGENT_TERMINAL_WIDTH=80

# Enable animations
AI_AGENT_ENABLE_ANIMATIONS=true

# =============================================================================
# Monitoring (Optional)
# =============================================================================

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
